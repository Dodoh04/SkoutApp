<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardModeloActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="325dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/pesto"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_share"/>


            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesto pasta"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$25,00"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A melhor massa do Estado. Feito com ingredientes meticulosamente selecionados. Livre de Gluten "
                android:textSize="15dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Compre agora"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <androidx.cardview.widget.CardView
           android:layout_width="150dp"
           android:layout_height="275dp"
           app:cardCornerRadius="25dp"
           android:layout_margin="4dp">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="75dp"
                   android:src="@drawable/vinho"
                   android:scaleType="centerCrop"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Vinho"
                   android:textSize="25dp"
                   android:textStyle="bold"
                   android:textColor="#000"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="$165,00"
                   android:textSize="20dp"
                   android:textStyle="bold"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Vinho Chileno Cabernet Sauvignon, Safra 1990 "
                   android:textSize="15dp"
                   />

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="3dp"
                   android:text="Compre agora"
                   android:textSize="12dp"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>


       <androidx.cardview.widget.CardView
           android:layout_width="150dp"
           android:layout_height="275dp"
           app:cardCornerRadius="25dp"
           android:layout_margin="4dp">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="75dp"
                   android:src="@drawable/sobremesa"
                   android:scaleType="centerCrop"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Bolo"
                   android:textSize="25dp"
                   android:textStyle="bold"
                   android:textColor="#000"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="$35,00"
                   android:textSize="20dp"
                   android:textStyle="bold"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Bolo sobremesa, especialidade da casa. Sabor divino!! "
                   android:textSize="15dp"
                   />

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="3dp"
                   android:text="Compre agora"
                   android:textSize="12dp"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>

   </LinearLayout>


</LinearLayout>